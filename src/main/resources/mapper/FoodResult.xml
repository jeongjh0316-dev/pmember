<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.example.pmember.service.FoodResultMapper">

    <!-- âœ… DB ì»¬ëŸ¼ â†’ DTO í•„ë“œ ë§¤í•‘ -->
    <resultMap id="FoodResultMap" type="com.example.pmember.dto.FoodResult">
        <id     property="foodmenuIdx"   column="foodmenu_idx"/>
        <result property="foodmenuName"  column="foodmenu_name"/>
        <result property="foodmenuImage" column="foodmenu_image"/>
        <result property="score"         column="score"/>
    </resultMap>

    <!-- âœ… (ì˜µì…˜) ì˜ˆì „ í…ŒìŠ¤íŠ¸ìš©: ê·¸ëƒ¥ ì•žì˜ 3ê°œ ë©”ë‰´ ê°€ì ¸ì˜¤ê¸° -->
    <select id="selectTopResults" resultMap="FoodResultMap">
        SELECT
        foodmenu_idx,
        foodmenu_name,
        foodmenu_image,
        0.0 AS score
        FROM p_foodmenu
        ORDER BY foodmenu_idx
        LIMIT 3
    </select>

    <!-- âœ… Flask ì¶”ì²œ ê²°ê³¼(ë©”ë‰´ ì´ë¦„ ë¦¬ìŠ¤íŠ¸)ë¡œ DBì—ì„œ ì´ë¯¸ì§€/ì •ë³´ ì¡°íšŒ
         + ë¡œê·¸ì¸ íšŒì›ì˜ ì•Œë ˆë¥´ê¸°(p_member_alergy)ì™€ ê²¹ì¹˜ëŠ” ë©”ë‰´ëŠ” ì œì™¸ -->
    <select id="selectByNames" resultMap="FoodResultMap">
        SELECT
        f.foodmenu_idx,
        f.foodmenu_name,
        f.foodmenu_image,
        0.0 AS score
        FROM p_foodmenu f
        WHERE f.foodmenu_name IN
        <foreach collection="names" item="name" open="(" separator="," close=")">
            #{name}
        </foreach>

        <!-- ðŸ”¹ memberIdê°€ ìžˆì„ ë•Œë§Œ ì•Œë ˆë¥´ê¸° í•„í„° ì ìš© (ê²ŒìŠ¤íŠ¸ë©´ ê·¸ëƒ¥ íŒ¨ìŠ¤) -->
        <if test="memberId != null and memberId != ''">
            AND NOT EXISTS (
            SELECT 1
            FROM p_foodmenu_alergy fa
            JOIN p_member_alergy ma
            ON fa.al_idx = ma.al_idx
            WHERE fa.foodmenu_idx = f.foodmenu_idx
            AND ma.id = #{memberId}
            )
        </if>
    </select>

</mapper>
